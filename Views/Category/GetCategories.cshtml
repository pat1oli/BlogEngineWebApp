@model IEnumerable<BlogEngineWebApp.Dto.CategoryDto>
@{
    ViewData["Title"] = "List of Categories";
}
<div>
    <h2>Categories</h2>
    @if (Model.Count() == 0)
    {
        <p> No category added. Add a new one.</p>
    }
    else
    {
        <div>
            <ul>
                @foreach (var category in Model)
                {
                    <li> <a>  @category.Title </a> </li>
                }
            </ul>
        </div>
        
    }
</div>

