@model IEnumerable<PostDto>
@{
    ViewData["Title"] = "List of Posts";
}
<br />
<div>
    <div class="row">
        <div class="col-md-6">
            <h2>Posts</h2>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary">Add</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            @if (Model.Count() == 0)
            {
                <p> No Post added. Add a new one.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var post in Model)
                    {
                        <li class="list-group-item"> <a>  @post.Title </a> </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>