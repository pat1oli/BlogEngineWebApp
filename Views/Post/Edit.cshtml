@model PostDto
@{
    ViewData["Title"] = "Blog - Edit Post";
}

<h2>Add Post</h2>
<form asp-action="Update">
    <div class="form-group row">
        <label class="col-md-2">Title</label>
        <div class="col-md-6">
            <input asp-for="Title" type="text" class="form-control" placeholder="Title" required autofocus />
        </div>
    </div>

    <div class="form-group row">
        <label for="CategoryId" class="col-md-2">Category</label>
        <div class="col-md-6">
            <select asp-for="CategoryId" name="CategoryId" id="CategoryId" class="form-control" asp-items="@ViewBag.CategoriesEnum" required>
                <option>--Select Category--</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPostDate" class="col-md-2">Publication Date</label>
        <div class="col-md-6">
            <input asp-for="PublicationDate" id="inputPostDate" type="date"  min="1990-01-01" max="2100-01-01" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <label for="inputContent">Content</label>
        <textarea asp-for="Content" id="inputContent" class="form-control col-md-8" required>
        </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>